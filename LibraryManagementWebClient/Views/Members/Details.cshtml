@model Member
@{
    ViewData["Title"] = "Member Details";
}

<div class="row mb-4">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Members</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.FirstName @Model.LastName</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">
                    <i class="bi bi-person"></i> Member Details
                </h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Name:</dt>
                            <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>

                            <dt class="col-sm-4">Email:</dt>
                            <dd class="col-sm-8">@Model.Email</dd>

                            <dt class="col-sm-4">Phone:</dt>
                            <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Phone) ? "Not provided" : Model.Phone)</dd>

                            <dt class="col-sm-4">Role:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-info">@Model.Role</span>
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Card Number:</dt>
                            <dd class="col-sm-8">@Model.LibraryCardNumber</dd>

                            <dt class="col-sm-4">Barcode:</dt>
                            <dd class="col-sm-8">@Model.Barcode</dd>

                            <dt class="col-sm-4">Join Date:</dt>
                            <dd class="col-sm-8">@Model.JoinDate.ToString("MMMM dd, yyyy")</dd>

                            <dt class="col-sm-4">Status:</dt>
                            <dd class="col-sm-8">
                                <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                                    @(Model.IsActive ? "Active" : "Inactive")
                                </span>
                            </dd>
                        </dl>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Address))
                {
                    <div class="mt-3">
                        <h6>Address:</h6>
                        <p class="text-muted">@Model.Address</p>
                    </div>
                }

                <div class="mt-3">
                    <h6>System Information:</h6>
                    <small class="text-muted">
                        Created: @Model.CreatedDate.ToString("MMM dd, yyyy HH:mm") |
                        @if (Model.UpdatedDate.HasValue)
                        {
                            <span>Updated: @Model.UpdatedDate.Value.ToString("MMM dd, yyyy HH:mm")</span>
                        }
                    </small>
                </div>
            </div>
        </div>

        @if (Model.Loans.Any())
        {
            <div class="card shadow mt-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-arrow-left-right"></i> Loan History (@Model.Loans.Count)
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Book</th>
                                    <th>Checkout Date</th>
                                    <th>Due Date</th>
                                    <th>Return Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var loan in Model.Loans.OrderByDescending(l => l.CheckoutDate))
                                {
                                    <tr>
                                        <td>
                                            <a asp-controller="Books" asp-action="Details" asp-route-id="@loan.BookId">
                                                @loan.Book?.Title
                                            </a>
                                        </td>
                                        <td>@loan.CheckoutDate.ToString("MMM dd, yyyy")</td>
                                        <td>@loan.DueDate.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            @if (loan.ReturnDate.HasValue)
                                            {
                                                @loan.ReturnDate.Value.ToString("MMM dd, yyyy")
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge @(loan.Status == "Active" ? "bg-success" : "bg-secondary")">
                                                @loan.Status
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

        @if (Model.Fines.Any())
        {
            <div class="card shadow mt-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Fines (@Model.Fines.Count)
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Loan</th>
                                    <th>Amount</th>
                                    <th>Description</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var fine in Model.Fines.OrderByDescending(f => f.CreatedDate))
                                {
                                    <tr>
                                        <td>
                                            <a asp-controller="Loans" asp-action="Details" asp-route-id="@fine.LoanId">
                                                Loan #@fine.LoanId
                                            </a>
                                        </td>
                                        <td class="text-danger fw-bold">$@fine.Amount</td>
                                        <td>@fine.Description</td>
                                        <td>@fine.CreatedDate.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            <span class="badge @(fine.IsPaid ? "bg-success" : "bg-danger")">
                                                @(fine.IsPaid ? "Paid" : "Unpaid")
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="col-lg-4">
        <div class="card shadow mb-3">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-gear"></i> Actions
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.MemberId" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Edit Member
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.MemberId" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete Member
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>

        <div class="card shadow">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-graph-up"></i> Statistics
                </h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6 mb-3">
                        <div class="border rounded p-3">
                            <h4 class="text-primary mb-0">@Model.Loans.Count(l => l.Status == "Active")</h4>
                            <small class="text-muted">Active Loans</small>
                        </div>
                    </div>
                    <div class="col-6 mb-3">
                        <div class="border rounded p-3">
                            <h4 class="text-success mb-0">@Model.Loans.Count(l => l.Status == "Returned")</h4>
                            <small class="text-muted">Returned</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="border rounded p-3">
                            <h4 class="text-danger mb-0">@Model.Fines.Count(f => !f.IsPaid)</h4>
                            <small class="text-muted">Unpaid Fines</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="border rounded p-3">
                            <h4 class="text-info mb-0">@Model.Loans.Count</h4>
                            <small class="text-muted">Total Loans</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 