<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FLib</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-gradient" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-book"></i> Home
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Customer" asp-action="Catalog">
                                <i class="bi bi-search"></i> Catalog
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Blog" asp-action="Index">
                                <i class="bi bi-newspaper"></i> Blog
                            </a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="LoanHistory" asp-action="Index">
                                    <i class="bi bi-clock-history"></i> Loan History
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Staff"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Books" asp-action="Index">
                                    <i class="bi bi-book"></i> Books
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Members" asp-action="Index">
                                    <i class="bi bi-people"></i> Members
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Loans" asp-action="Index">
                                    <i class="bi bi-arrow-left-right"></i> Loans
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Publishers" asp-action="Index">
                                    <i class="bi bi-building"></i> Publishers
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Customer" asp-action="About">
                                <i class="bi bi-info-circle"></i> About
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Customer" asp-action="Contact">
                                <i class="bi bi-envelope"></i> Contact
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <span class="navbar-text text-light me-3">
                                    <i class="bi bi-person-circle"></i> 
                                    Hello, @User.Claims.FirstOrDefault(c => c.Type == "FirstName")?.Value!
                                    <small class="d-block">Card: @User.Claims.FirstOrDefault(c => c.Type == "LibraryCardNumber")?.Value</small>
                                </span>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-gear"></i> Menu
                                </a>
                                <ul class="dropdown-menu">
                                    <li><span class="dropdown-item-text text-muted">Role: @User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role)?.Value</span></li>
                                    <li><span class="dropdown-item-text text-muted">Member ID: @User.Claims.FirstOrDefault(c => c.Type == "MemberId")?.Value</span></li>
                                    <li><span class="dropdown-item-text text-muted">Joined: @User.Claims.FirstOrDefault(c => c.Type == "JoinDate")?.Value</span></li>
                                    <li><hr class="dropdown-divider"></li>
                                    @if (User.IsInRole("Staff"))
                                    {
                                        <li><a class="dropdown-item" asp-controller="Home" asp-action="Index"><i class="bi bi-gear"></i> Library Dashboard</a></li>
                                        <li><a class="dropdown-item" asp-controller="Blog" asp-action="Manage"><i class="bi bi-newspaper"></i> Manage Blog</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                    }
                                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="Logout"><i class="bi bi-box-arrow-right"></i> Logout</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-light btn-sm" asp-controller="Auth" asp-action="Logout">
                                    <i class="bi bi-box-arrow-right"></i> Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Register">
                                    <i class="bi bi-person-plus"></i> Register
                                </a>
                            </li>
                        }
                        
                        @if (User.IsInRole("Staff"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-gear"></i> Library Dashboard
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show my-3" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <strong>Error:</strong> <span class="ms-2">@TempData["Error"]</span>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show my-3" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        <strong>Success:</strong> <span class="ms-2">@TempData["Success"]</span>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5><i class="bi bi-book"></i> Home</h5>
                    <p class="text-muted">Your gateway to knowledge and discovery.</p>
                </div>
                <div class="col-md-4">
                    <h6>Quick Links</h6>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Customer" asp-action="Catalog" class="text-muted text-decoration-none">Browse Books</a></li>
                        <li><a asp-controller="Customer" asp-action="About" class="text-muted text-decoration-none">About Us</a></li>
                        <li><a asp-controller="Customer" asp-action="Contact" class="text-muted text-decoration-none">Contact</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6>Contact Info</h6>
                    <ul class="list-unstyled text-muted">
                        <li><i class="bi bi-geo-alt"></i> 123 Library Street</li>
                        <li><i class="bi bi-telephone"></i> (555) 123-4567</li>
                        <li><i class="bi bi-envelope"></i> info@library.com</li>
                    </ul>
                </div>
            </div>
            <hr class="my-3">
            <div class="text-center">
                <small class="text-muted">&copy; 2024 Home. All rights reserved.</small>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.tiny.cloud/1/irqg92btzzvfcghc49cowwzfpihq4ryy2h7yl8fkgi6h90k7/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
