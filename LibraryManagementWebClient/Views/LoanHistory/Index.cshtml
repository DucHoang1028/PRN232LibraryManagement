@model LoanHistoryViewModel
@{
    ViewData["Title"] = "Loan History";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-clock-history"></i> My Loan History</h2>
                <a asp-controller="Customer" asp-action="Catalog" class="btn btn-primary">
                    <i class="bi bi-search"></i> Browse More Books
                </a>
            </div>
        </div>
    </div>

    @if (Model.Member != null)
    {
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="bi bi-person-circle"></i> Account Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <p><strong>Name:</strong> @Model.Member.FirstName @Model.Member.LastName</p>
                                <p><strong>Email:</strong> @Model.Member.Email</p>
                            </div>
                            <div class="col-sm-6">
                                <p><strong>Member Since:</strong> @Model.Member.JoinDate.ToString("MMMM yyyy")</p>
                                <p><strong>Status:</strong> 
                                    <span class="badge @(Model.Member.IsActive ? "bg-success" : "bg-danger")">
                                        @(Model.Member.IsActive ? "Active" : "Inactive")
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="bi bi-graph-up"></i> Statistics</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-4">
                                <h4 class="text-primary">@Model.ActiveLoans.Count</h4>
                                <small class="text-muted">Current Loans</small>
                            </div>
                            <div class="col-4">
                                <h4 class="text-success">@Model.Loans.Count</h4>
                                <small class="text-muted">Total Loans</small>
                            </div>
                            <div class="col-4">
                                <h4 class="text-warning">@Model.OverdueLoans.Count</h4>
                                <small class="text-muted">Overdue</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (Model.ActiveLoans.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="bi bi-book"></i> Currently Checked Out</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Book</th>
                                        <th>Checkout Date</th>
                                        <th>Due Date</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var loan in Model.ActiveLoans)
                                    {
                                        var isOverdue = loan.DueDate < DateTime.Today;
                                        <tr class="@(isOverdue ? "table-warning" : "")">
                                            <td>
                                                <div>
                                                    <strong>@loan.Book?.Title</strong>
                                                    <br>
                                                    <small class="text-muted">@loan.Book?.Isbn</small>
                                                </div>
                                            </td>
                                            <td>@loan.CheckoutDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <span class="@(isOverdue ? "text-danger fw-bold" : "")">
                                                    @loan.DueDate.ToString("MMM dd, yyyy")
                                                </span>
                                            </td>
                                            <td>
                                                @if (isOverdue)
                                                {
                                                    <span class="badge bg-danger">Overdue</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-controller="Customer" asp-action="BookDetails" asp-route-id="@loan.BookId" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i> View Book
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (Model.Loans.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="bi bi-clock-history"></i> Complete Loan History</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Book</th>
                                        <th>Checkout Date</th>
                                        <th>Due Date</th>
                                        <th>Return Date</th>
                                        <th>Status</th>
                                        <th>Fine</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var loan in Model.Loans.OrderByDescending(l => l.CheckoutDate))
                                    {
                                        var isOverdue = loan.DueDate < DateTime.Today && !loan.ReturnDate.HasValue;
                                        var isReturned = loan.ReturnDate.HasValue;
                                        var fine = Model.Fines.FirstOrDefault(f => f.LoanId == loan.LoanId);
                                        
                                        <tr>
                                            <td>
                                                <div>
                                                    <strong>@loan.Book?.Title</strong>
                                                    <br>
                                                    <small class="text-muted">@loan.Book?.Isbn</small>
                                                </div>
                                            </td>
                                            <td>@loan.CheckoutDate.ToString("MMM dd, yyyy")</td>
                                            <td>@loan.DueDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @if (isReturned && loan.ReturnDate.HasValue)
                                                {
                                                    @loan.ReturnDate.Value.ToString("MMM dd, yyyy")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (isReturned)
                                                {
                                                    <span class="badge bg-secondary">Returned</span>
                                                }
                                                else if (isOverdue)
                                                {
                                                    <span class="badge bg-danger">Overdue</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                            </td>
                                            <td>
                                                @if (fine != null && fine.Amount > 0)
                                                {
                                                    <span class="text-danger fw-bold">$@fine.Amount.ToString("F2")</span>
                                                    @if (!fine.IsPaid)
                                                    {
                                                        <span class="badge bg-warning ms-1">Unpaid</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-success ms-1">Paid</span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="bi bi-clock-history display-1 text-muted"></i>
                        <h4 class="mt-3">No Loan History</h4>
                        <p class="text-muted">You haven't borrowed any books yet.</p>
                        <a asp-controller="Customer" asp-action="Catalog" class="btn btn-primary">
                            <i class="bi bi-search"></i> Browse Books
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div> 