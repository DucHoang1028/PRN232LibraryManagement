@model LibraryManagementWebClient.Models.BlogViewModel

@{
    ViewData["Title"] = "Library Blog";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h1 class="mb-4">Library Blog</h1>
            
            @if (!string.IsNullOrEmpty(Model.SelectedTag))
            {
                <div class="mb-4">
                    <h5>Posts tagged with: <span class="badge bg-primary">@Model.SelectedTag</span></h5>
                    <a asp-action="Index" class="btn btn-sm btn-outline-secondary">Clear filter</a>
                </div>
            }

            @if (!Model.BlogPosts.Any())
            {
                <div class="alert alert-info">
                    No blog posts found.
                </div>
            }
            else
            {
                @foreach (var post in Model.BlogPosts)
                {
                    <div class="card mb-4 shadow-sm">
                        @if (!string.IsNullOrEmpty(post.ImageUrl))
                        {
                            <img src="@post.ImageUrl" class="card-img-top" alt="@post.Title" style="height: 200px; object-fit: cover;">
                        }
                        <div class="card-body">
                            <h2 class="card-title h4">
                                <a asp-action="Details" asp-route-id="@post.BlogPostId" class="text-decoration-none">@post.Title</a>
                            </h2>
                            <p class="card-text text-muted mb-2 small">
                                <i class="bi bi-person"></i> @post.AuthorName | 
                                <i class="bi bi-calendar"></i> @post.FormattedPublishedDate
                            </p>
                            <p class="card-text">
                                @(post.Summary ?? (post.Content.Length > 200 ? post.Content.Substring(0, 200) + "..." : post.Content))
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <a asp-action="Details" asp-route-id="@post.BlogPostId" class="btn btn-sm btn-outline-primary">Read More</a>
                                </div>
                                <div>
                                    @foreach (var tag in post.TagList)
                                    {
                                        <a asp-action="Index" asp-route-tag="@tag" class="badge bg-secondary text-decoration-none">@tag</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Topics</h5>
                </div>
                <div class="card-body">
                    @if (Model.Tags.Any())
                    {
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var tag in Model.Tags.OrderByDescending(t => t.Value))
                            {
                                <a asp-action="Index" asp-route-tag="@tag.Key" class="badge bg-secondary text-decoration-none">
                                    @tag.Key (@tag.Value)
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="mb-0">No topics found.</p>
                    }
                </div>
            </div>
            
            @if (User.IsInRole("Staff"))
            {
                <div class="card mt-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Staff Actions</h5>
                        <a asp-action="Manage" class="btn btn-primary">Manage Blog Posts</a>
                        <a asp-action="Create" class="btn btn-success mt-2">Create New Post</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div> 