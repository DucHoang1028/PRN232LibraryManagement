@model Book
@{
    ViewData["Title"] = "Delete Book";
}

<div class="row mb-4">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Books</a></li>
                <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.BookId">@Model.Title</a></li>
                <li class="breadcrumb-item active" aria-current="page">Delete</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="bi bi-exclamation-triangle"></i> Delete Book
                </h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <h5 class="alert-heading">
                        <i class="bi bi-exclamation-triangle"></i> Warning!
                    </h5>
                    <p class="mb-0">
                        Are you sure you want to delete this book? This action cannot be undone.
                    </p>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Title:</dt>
                            <dd class="col-sm-8">@Model.Title</dd>

                            <dt class="col-sm-4">ISBN:</dt>
                            <dd class="col-sm-8">@Model.Isbn</dd>

                            <dt class="col-sm-4">Publisher:</dt>
                            <dd class="col-sm-8">@(Model.Publisher?.Name ?? "Unknown")</dd>

                            <dt class="col-sm-4">Language:</dt>
                            <dd class="col-sm-8">@Model.Language</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Total Copies:</dt>
                            <dd class="col-sm-8">@Model.TotalCopies</dd>

                            <dt class="col-sm-4">Available Copies:</dt>
                            <dd class="col-sm-8">@Model.AvailableCopies</dd>

                            <dt class="col-sm-4">Rack Number:</dt>
                            <dd class="col-sm-8">@Model.RackNumber</dd>

                            <dt class="col-sm-4">Status:</dt>
                            <dd class="col-sm-8">
                                <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                                    @(Model.IsActive ? "Active" : "Inactive")
                                </span>
                            </dd>
                        </dl>
                    </div>
                </div>

                @if (Model.Loans.Any())
                {
                    <div class="alert alert-info mt-3">
                        <h6>
                            <i class="bi bi-info-circle"></i> Active Loans Found
                        </h6>
                        <p class="mb-0">
                            This book has @Model.Loans.Count active loan(s). Deleting this book may affect loan records.
                        </p>
                    </div>
                }

                @if (Model.Reservations.Any())
                {
                    <div class="alert alert-info">
                        <h6>
                            <i class="bi bi-info-circle"></i> Active Reservations Found
                        </h6>
                        <p class="mb-0">
                            This book has @Model.Reservations.Count active reservation(s). Deleting this book may affect reservation records.
                        </p>
                    </div>
                }

                <form asp-action="Delete" method="post" class="mt-4">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@Model.BookId" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete Book
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 