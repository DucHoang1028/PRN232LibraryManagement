@model List<Book>
@{
    ViewData["Title"] = "Books";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1 class="display-5 text-primary">
            <i class="bi bi-book"></i> Books
        </h1>
        <p class="lead text-muted">Manage your library's book collection</p>
    </div>
    <div class="col-md-4 text-end">
        <a asp-action="Create" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle"></i> Add New Book
        </a>
    </div>
</div>

<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-search"></i> Search Books
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Index" method="get" class="row g-3">
                    <div class="col-md-4">
                        <label for="searchTerm" class="form-label">Search by Title</label>
                        <input type="text" class="form-control" id="searchTerm" name="searchTerm" 
                               value="@Context.Request.Query["searchTerm"]" placeholder="Enter book title...">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">&nbsp;</label>
                        <div>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search"></i> Search
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-clockwise"></i> Clear
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="mb-0 text-truncate">@book.Title</h6>
                            <span class="badge bg-light text-dark">@book.Isbn</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <p class="card-text text-muted small mb-2">
                            <i class="bi bi-building"></i> @(book.Publisher?.Name ?? "Unknown Publisher")
                        </p>
                        <p class="card-text small mb-2">
                            @if (!string.IsNullOrEmpty(book.Description))
                            {
                                @(book.Description.Length > 100 ? book.Description.Substring(0, 100) + "..." : book.Description)
                            }
                            else
                            {
                                <span class="text-muted">No description available</span>
                            }
                        </p>
                        <div class="row text-center mb-3">
                            <div class="col-6">
                                <small class="text-muted">Total Copies</small>
                                <div class="fw-bold">@book.TotalCopies</div>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">Available</small>
                                <div class="fw-bold @(book.AvailableCopies > 0 ? "text-success" : "text-danger")">
                                    @book.AvailableCopies
                                </div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                <i class="bi bi-calendar"></i> @book.PublicationDate.ToString("MMM yyyy")
                            </small>
                            <span class="badge @(book.IsActive ? "bg-success" : "bg-secondary")">
                                @(book.IsActive ? "Active" : "Inactive")
                            </span>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Details" asp-route-id="@book.BookId" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-eye"></i> View
                            </a>
                            <a asp-action="Edit" asp-route-id="@book.BookId" class="btn btn-outline-warning btn-sm">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@book.BookId" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row">
        <div class="col-12">
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> 
                Showing @Model.Count book(s) in your library collection.
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-body text-center py-5">
                    <i class="bi bi-book display-1 text-muted mb-3"></i>
                    <h4 class="text-muted">No Books Found</h4>
                    <p class="text-muted">Start building your library collection by adding your first book.</p>
                    <a asp-action="Create" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-circle"></i> Add Your First Book
                    </a>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }
    .card:hover {
        transform: translateY(-5px);
    }
    .btn-group .btn {
        border-radius: 0;
    }
    .btn-group .btn:first-child {
        border-top-left-radius: 0.375rem;
        border-bottom-left-radius: 0.375rem;
    }
    .btn-group .btn:last-child {
        border-top-right-radius: 0.375rem;
        border-bottom-right-radius: 0.375rem;
    }
</style> 