@model CatalogViewModel
@{
    ViewData["Title"] = "Book Catalog";
}

<div class="container-fluid py-4">
    <!-- Search and Filter Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="get" asp-action="Catalog" class="row g-3">
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-search"></i>
                                </span>
                                <input type="text" name="searchTerm" class="form-control" 
                                       placeholder="Search by title, ISBN, or description..." 
                                       value="@Model.SearchTerm">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-search"></i> Search
                                </button>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <select name="publisher" class="form-select">
                                <option value="">All Publishers</option>
                                @if (ViewBag.Publishers != null)
                                {
                                    @foreach (var publisher in ViewBag.Publishers)
                                    {
                                        if (Model.SelectedPublisher == publisher.PublisherId.ToString())
                                        {
                                            <option value="@publisher.PublisherId" selected>@publisher.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@publisher.PublisherId">@publisher.Name</option>
                                        }
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <a asp-action="Catalog" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-arrow-clockwise"></i> Clear
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Results Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="bi bi-book"></i> Book Catalog
                    </h2>
                    <p class="text-muted mb-0">
                        @if (!string.IsNullOrEmpty(Model.SearchTerm))
                        {
                            <span>Search results for "@Model.SearchTerm" - </span>
                        }
                        Showing @Model.Books.Count book(s)
                    </p>
                </div>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-outline-primary btn-sm" onclick="setView('grid')">
                        <i class="bi bi-grid"></i> Grid
                    </button>
                    <button type="button" class="btn btn-outline-primary btn-sm" onclick="setView('list')">
                        <i class="bi bi-list"></i> List
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Books != null && Model.Books.Any())
    {
        <!-- Grid View -->
        <div id="gridView" class="view-mode">
            <div class="row">
                @foreach (var book in Model.Books)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100 shadow-sm book-card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <h5 class="card-title text-truncate">@book.Title</h5>
                                    <span class="badge @(book.AvailableCopies > 0 ? "bg-success" : "bg-danger")">
                                        @(book.AvailableCopies > 0 ? "Available" : "Unavailable")
                                    </span>
                                </div>
                                <p class="card-text text-muted small mb-2">
                                    <i class="bi bi-person"></i> @(book.Publisher?.Name ?? "Unknown Publisher")
                                </p>
                                <p class="card-text text-muted small mb-2">
                                    <i class="bi bi-calendar"></i> @book.PublicationDate.ToString("yyyy")
                                </p>
                                <p class="card-text text-muted small mb-2">
                                    <i class="bi bi-translate"></i> @book.Language
                                </p>
                                @if (!string.IsNullOrEmpty(book.Description))
                                {
                                    <p class="card-text small">@(book.Description.Length > 120 ? book.Description.Substring(0, 120) + "..." : book.Description)</p>
                                }
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        <i class="bi bi-book"></i> @book.AvailableCopies of @book.TotalCopies copies
                                    </small>
                                    <a asp-action="BookDetails" asp-route-id="@book.BookId" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye"></i> View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- List View -->
        <div id="listView" class="view-mode" style="display: none;">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Book</th>
                                    <th>Publisher</th>
                                    <th>Language</th>
                                    <th>Publication Year</th>
                                    <th>Availability</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var book in Model.Books)
                                {
                                    <tr>
                                        <td>
                                            <div>
                                                <strong>@book.Title</strong>
                                                <br>
                                                <small class="text-muted">@book.Isbn</small>
                                            </div>
                                        </td>
                                        <td>@(book.Publisher?.Name ?? "Unknown")</td>
                                        <td>@book.Language</td>
                                        <td>@book.PublicationDate.ToString("yyyy")</td>
                                        <td>
                                            <span class="badge @(book.AvailableCopies > 0 ? "bg-success" : "bg-danger")">
                                                @book.AvailableCopies of @book.TotalCopies
                                            </span>
                                        </td>
                                        <td>
                                            <a asp-action="BookDetails" asp-route-id="@book.BookId" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-eye"></i> View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-search display-1 text-muted mb-3"></i>
                        <h4 class="text-muted">No Books Found</h4>
                        <p class="text-muted">
                            @if (!string.IsNullOrEmpty(Model.SearchTerm))
                            {
                                <span>No books match your search for "@Model.SearchTerm".</span>
                            }
                            else
                            {
                                <span>No books are currently available in the catalog.</span>
                            }
                        </p>
                        <a asp-action="Catalog" class="btn btn-primary">
                            <i class="bi bi-arrow-left"></i> Back to Catalog
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function setView(view) {
            const gridView = document.getElementById('gridView');
            const listView = document.getElementById('listView');
            
            if (view === 'grid') {
                gridView.style.display = 'block';
                listView.style.display = 'none';
            } else {
                gridView.style.display = 'none';
                listView.style.display = 'block';
            }
        }
    </script>
}

<style>
    .book-card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }
    
    .book-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
    
    .card {
        border-radius: 0.75rem;
    }
    
    .btn {
        border-radius: 0.5rem;
    }
    
    .view-mode {
        transition: opacity 0.3s ease-in-out;
    }
</style> 