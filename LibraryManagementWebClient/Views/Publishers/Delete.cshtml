@model Publisher
@{
    ViewData["Title"] = "Delete Publisher";
}

<div class="row mb-4">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Publishers</a></li>
                <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.PublisherId">@Model.Name</a></li>
                <li class="breadcrumb-item active" aria-current="page">Delete</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="bi bi-exclamation-triangle"></i> Delete Publisher
                </h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <h5 class="alert-heading">
                        <i class="bi bi-exclamation-triangle"></i> Warning!
                    </h5>
                    <p class="mb-0">
                        Are you sure you want to delete this publisher? This action cannot be undone.
                    </p>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Name:</dt>
                            <dd class="col-sm-8">@Model.Name</dd>

                            <dt class="col-sm-4">Email:</dt>
                            <dd class="col-sm-8">@Model.Email</dd>

                            <dt class="col-sm-4">Phone:</dt>
                            <dd class="col-sm-8">@Model.Phone</dd>

                            <dt class="col-sm-4">Website:</dt>
                            <dd class="col-sm-8">
                                @if (!string.IsNullOrEmpty(Model.Website))
                                {
                                    <a href="@Model.Website" target="_blank" class="text-decoration-none">@Model.Website</a>
                                }
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Total Books:</dt>
                            <dd class="col-sm-8">@Model.Books.Count</dd>

                            <dt class="col-sm-4">Active Books:</dt>
                            <dd class="col-sm-8">@Model.Books.Count(b => b.IsActive)</dd>

                            <dt class="col-sm-4">Created Date:</dt>
                            <dd class="col-sm-8">@Model.CreatedDate.ToString("MMMM dd, yyyy")</dd>

                            <dt class="col-sm-4">Status:</dt>
                            <dd class="col-sm-8">
                                <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                                    @(Model.IsActive ? "Active" : "Inactive")
                                </span>
                            </dd>
                        </dl>
                    </div>
                </div>

                @if (Model.Books.Any())
                {
                    <div class="alert alert-danger mt-3">
                        <h6>
                            <i class="bi bi-exclamation-triangle"></i> Books Found
                        </h6>
                        <p class="mb-0">
                            This publisher has @Model.Books.Count book(s). Deleting this publisher will affect all associated books.
                        </p>
                    </div>
                }

                <form asp-action="Delete" method="post" class="mt-4">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@Model.PublisherId" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete Publisher
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>