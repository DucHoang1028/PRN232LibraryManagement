@model Publisher
@{
    ViewData["Title"] = "Publisher Details";
}

<div class="row mb-4">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Publishers</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0">
                    <i class="bi bi-building"></i> Publisher Details
                </h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Name:</dt>
                            <dd class="col-sm-8">@Model.Name</dd>

                            <dt class="col-sm-4">Email:</dt>
                            <dd class="col-sm-8">@Model.Email</dd>

                            <dt class="col-sm-4">Phone:</dt>
                            <dd class="col-sm-8">@Model.Phone</dd>

                            <dt class="col-sm-4">Website:</dt>
                            <dd class="col-sm-8">
                                @if (!string.IsNullOrEmpty(Model.Website))
                                {
                                    <a href="@Model.Website" target="_blank" class="text-decoration-none">@Model.Website</a>
                                }
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Total Books:</dt>
                            <dd class="col-sm-8">@Model.Books.Count</dd>

                            <dt class="col-sm-4">Active Books:</dt>
                            <dd class="col-sm-8">@Model.Books.Count(b => b.IsActive)</dd>

                            <dt class="col-sm-4">Created Date:</dt>
                            <dd class="col-sm-8">@Model.CreatedDate.ToString("MMMM dd, yyyy")</dd>

                            <dt class="col-sm-4">Status:</dt>
                            <dd class="col-sm-8">
                                <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                                    @(Model.IsActive ? "Active" : "Inactive")
                                </span>
                            </dd>
                        </dl>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Address))
                {
                    <div class="mt-3">
                        <h6>Address:</h6>
                        <p class="text-muted">@Model.Address</p>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mt-3">
                        <h6>Description:</h6>
                        <p class="text-muted">@Model.Description</p>
                    </div>
                }
            </div>
        </div>

        @if (Model.Books.Any())
        {
            <div class="card shadow mt-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-book"></i> Published Books (@Model.Books.Count)
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>ISBN</th>
                                    <th>Language</th>
                                    <th>Publication Date</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var book in Model.Books.OrderBy(b => b.Title))
                                {
                                    <tr>
                                        <td>
                                            <a asp-controller="Books" asp-action="Details" asp-route-id="@book.BookId">
                                                @book.Title
                                            </a>
                                        </td>
                                        <td>@book.Isbn</td>
                                        <td>@book.Language</td>
                                        <td>@book.PublicationDate.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            <span class="badge @(book.IsActive ? "bg-success" : "bg-secondary")">
                                                @(book.IsActive ? "Active" : "Inactive")
                                            </span>
                                        </td>
                                        <td>
                                            <a asp-controller="Books" asp-action="Details" asp-route-id="@book.BookId" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-eye"></i> View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="col-lg-4">
        <div class="card shadow mb-3">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-gear"></i> Actions
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.PublisherId" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Edit Publisher
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.PublisherId" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete Publisher
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>

        <div class="card shadow">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-graph-up"></i> Statistics
                </h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6 mb-3">
                        <div class="border rounded p-3">
                            <h4 class="text-primary mb-0">@Model.Books.Count</h4>
                            <small class="text-muted">Total Books</small>
                        </div>
                    </div>
                    <div class="col-6 mb-3">
                        <div class="border rounded p-3">
                            <h4 class="text-success mb-0">@Model.Books.Count(b => b.IsActive)</h4>
                            <small class="text-muted">Active Books</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="border rounded p-3">
                            <h4 class="text-info mb-0">@Model.Books.Count(b => b.AvailableCopies > 0)</h4>
                            <small class="text-muted">Available Books</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="border rounded p-3">
                            <h4 class="text-warning mb-0">@Model.Books.Count(b => b.AvailableCopies == 0)</h4>
                            <small class="text-muted">Out of Stock</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 