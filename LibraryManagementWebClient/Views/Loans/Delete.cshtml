@model Loan
@{
    ViewData["Title"] = "Delete Loan";
}

<div class="row mb-4">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Loans</a></li>
                <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.LoanId">Loan #@Model.LoanId</a></li>
                <li class="breadcrumb-item active" aria-current="page">Delete</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="bi bi-exclamation-triangle"></i> Delete Loan
                </h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <h5 class="alert-heading">
                        <i class="bi bi-exclamation-triangle"></i> Warning!
                    </h5>
                    <p class="mb-0">
                        Are you sure you want to delete this loan? This action cannot be undone.
                    </p>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Book:</dt>
                            <dd class="col-sm-8">@Model.Book?.Title</dd>

                            <dt class="col-sm-4">Member:</dt>
                            <dd class="col-sm-8">@Model.Member?.FirstName @Model.Member?.LastName</dd>

                            <dt class="col-sm-4">Checkout Date:</dt>
                            <dd class="col-sm-8">@Model.CheckoutDate.ToString("MMMM dd, yyyy")</dd>

                            <dt class="col-sm-4">Due Date:</dt>
                            <dd class="col-sm-8">@Model.DueDate.ToString("MMMM dd, yyyy")</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Return Date:</dt>
                            <dd class="col-sm-8">
                                @if (Model.ReturnDate.HasValue)
                                {
                                    @Model.ReturnDate.Value.ToString("MMMM dd, yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">Not returned</span>
                                }
                            </dd>

                            <dt class="col-sm-4">Status:</dt>
                            <dd class="col-sm-8">
                                @if (Model.Status == "Active" && Model.DueDate < DateTime.Today)
                                {
                                    <span class="badge bg-danger">Overdue</span>
                                }
                                else
                                {
                                    <span class="badge @(Model.Status == "Active" ? "bg-success" : "bg-secondary")">
                                        @Model.Status
                                    </span>
                                }
                            </dd>

                            <dt class="col-sm-4">Renewed:</dt>
                            <dd class="col-sm-8">
                                <span class="badge @(Model.IsRenewed ? "bg-info" : "bg-secondary")">
                                    @(Model.IsRenewed ? "Yes" : "No")
                                </span>
                            </dd>

                            <dt class="col-sm-4">Renewal Count:</dt>
                            <dd class="col-sm-8">@Model.RenewalCount</dd>
                        </dl>
                    </div>
                </div>

                @if (Model.Fine != null)
                {
                    <div class="alert alert-info mt-3">
                        <h6>
                            <i class="bi bi-info-circle"></i> Fine Associated
                        </h6>
                        <p class="mb-0">
                            This loan has an associated fine of $@Model.Fine.Amount. Deleting this loan may affect fine records.
                        </p>
                    </div>
                }

                <form asp-action="Delete" method="post" class="mt-4">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@Model.LoanId" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete Loan
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 