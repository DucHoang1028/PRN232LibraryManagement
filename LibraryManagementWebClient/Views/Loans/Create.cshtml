@model Loan
@{
    ViewData["Title"] = "Create Loan";
}

<div class="row mb-4">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Loans</a></li>
                <li class="breadcrumb-item active" aria-current="page">Create Loan</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">
                    <i class="bi bi-plus-circle"></i> Create New Loan
                </h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="BookId" class="form-label">Book *</label>
                                <select asp-for="BookId" class="form-select" asp-items="@(new SelectList(ViewBag.Books, "BookId", "Title"))">
                                    <option value="">-- Select Book --</option>
                                </select>
                                <span asp-validation-for="BookId" class="text-danger"></span>
                                <small class="form-text text-muted">Only books with available copies are shown</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="MemberId" class="form-label">Member *</label>
                                <select asp-for="MemberId" class="form-select" asp-items="@(new SelectList(ViewBag.Members, "MemberId", "FullName"))">
                                    <option value="">-- Select Member --</option>
                                </select>
                                <span asp-validation-for="MemberId" class="text-danger"></span>
                                <small class="form-text text-muted">Only active members are shown</small>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CheckoutDate" class="form-label">Checkout Date *</label>
                                <input asp-for="CheckoutDate" class="form-control" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")">
                                <span asp-validation-for="CheckoutDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="DueDate" class="form-label">Due Date *</label>
                                <input asp-for="DueDate" class="form-control" type="date" value="@DateTime.Today.AddDays(14).ToString("yyyy-MM-dd")">
                                <span asp-validation-for="DueDate" class="text-danger"></span>
                                <small class="form-text text-muted">Default is 14 days from checkout</small>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label">Notes</label>
                        <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Enter any additional notes..."></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" checked>
                            <label asp-for="IsActive" class="form-check-label">
                                Loan is active (book is checked out)
                            </label>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Create Loan
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Auto-set due date to 14 days from checkout date
        document.getElementById('CheckoutDate').addEventListener('change', function() {
            const checkoutDate = new Date(this.value);
            const dueDate = new Date(checkoutDate);
            dueDate.setDate(dueDate.getDate() + 14);
            document.getElementById('DueDate').value = dueDate.toISOString().split('T')[0];
        });

        // Validate due date is after checkout date
        document.getElementById('DueDate').addEventListener('change', function() {
            const checkoutDate = new Date(document.getElementById('CheckoutDate').value);
            const dueDate = new Date(this.value);
            if (dueDate <= checkoutDate) {
                alert('Due date must be after checkout date');
                this.value = '';
            }
        });
    </script>
} 