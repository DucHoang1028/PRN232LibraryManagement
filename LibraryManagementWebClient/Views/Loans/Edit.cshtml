@model Loan
@{
    ViewData["Title"] = "Edit Loan";
}

<div class="row mb-4">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Loans</a></li>
                <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.LoanId">Loan #@Model.LoanId</a></li>
                <li class="breadcrumb-item active" aria-current="page">Edit</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow">
            <div class="card-header bg-warning text-dark">
                <h4 class="mb-0">
                    <i class="bi bi-pencil"></i> Edit Loan
                </h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="LoanId" />
                    <input type="hidden" asp-for="CreatedDate" />
                    
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Book</label>
                                <input type="text" class="form-control" value="@Model.Book?.Title" readonly>
                                <small class="text-muted">Book cannot be changed after loan creation</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Member</label>
                                <input type="text" class="form-control" value="@Model.Member?.FirstName @Model.Member?.LastName" readonly>
                                <small class="text-muted">Member cannot be changed after loan creation</small>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CheckoutDate" class="form-label">Checkout Date *</label>
                                <input asp-for="CheckoutDate" class="form-control" type="date">
                                <span asp-validation-for="CheckoutDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="DueDate" class="form-label">Due Date *</label>
                                <input asp-for="DueDate" class="form-control" type="date">
                                <span asp-validation-for="DueDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="ReturnDate" class="form-label">Return Date</label>
                                <input asp-for="ReturnDate" class="form-control" type="date">
                                <span asp-validation-for="ReturnDate" class="text-danger"></span>
                                <small class="text-muted">Leave empty if book is not returned</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Status" class="form-label">Status *</label>
                                <select asp-for="Status" class="form-select">
                                    <option value="Active">Active</option>
                                    <option value="Returned">Returned</option>
                                    <option value="Overdue">Overdue</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="IsRenewed" class="form-label">Renewal Status</label>
                                <div class="form-check">
                                    <input asp-for="IsRenewed" class="form-check-input" type="checkbox">
                                    <label asp-for="IsRenewed" class="form-check-label">
                                        Loan has been renewed
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="RenewalCount" class="form-label">Renewal Count</label>
                                <input asp-for="RenewalCount" class="form-control" type="number" min="0">
                                <span asp-validation-for="RenewalCount" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label">Notes</label>
                        <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Enter any additional notes..."></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox">
                            <label asp-for="IsActive" class="form-check-label">
                                Loan is active (book is checked out)
                            </label>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@Model.LoanId" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Details
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-check-circle"></i> Update Loan
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Validate due date is after checkout date
        document.getElementById('DueDate').addEventListener('change', function() {
            const checkoutDate = new Date(document.getElementById('CheckoutDate').value);
            const dueDate = new Date(this.value);
            if (dueDate <= checkoutDate) {
                alert('Due date must be after checkout date');
                this.value = '';
            }
        });

        // Auto-update status when return date is set
        document.getElementById('ReturnDate').addEventListener('change', function() {
            if (this.value) {
                document.getElementById('Status').value = 'Returned';
                document.getElementById('IsActive').checked = false;
            }
        });
    </script>
} 