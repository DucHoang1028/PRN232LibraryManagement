@model CustomerDashboardViewModel
@{
    ViewData["Title"] = "Welcome to Our Library";
}

<!-- Hero Section -->
<div class="hero-section bg-primary text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-3">Welcome to Our Library</h1>
                <p class="lead mb-4">Discover thousands of books, from classic literature to modern bestsellers. Your journey to knowledge starts here.</p>
                <div class="d-flex gap-3">
                    <a asp-controller="Customer" asp-action="Catalog" class="btn btn-light btn-lg">
                        <i class="bi bi-search"></i> Browse Catalog
                    </a>
                    <a asp-controller="Customer" asp-action="About" class="btn btn-outline-light btn-lg">
                        <i class="bi bi-info-circle"></i> Learn More
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <i class="bi bi-book display-1 text-light opacity-75"></i>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Section -->
<div class="container mb-5">
    <div class="row text-center">
        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-book text-primary display-6 mb-3"></i>
                    <h3 class="text-primary mb-2">@Model.TotalBooks</h3>
                    <p class="text-muted mb-0">Total Books</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-check-circle text-success display-6 mb-3"></i>
                    <h3 class="text-success mb-2">@Model.AvailableBooks</h3>
                    <p class="text-muted mb-0">Available Books</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-people text-info display-6 mb-3"></i>
                    <h3 class="text-info mb-2">24/7</h3>
                    <p class="text-muted mb-0">Online Access</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-star text-warning display-6 mb-3"></i>
                    <h3 class="text-warning mb-2">Free</h3>
                    <p class="text-muted mb-0">Membership</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Featured Books Section -->
@if (Model.FeaturedBooks.Any())
{
    <div class="container mb-5">
        <div class="row mb-4">
            <div class="col-12">
                <h2 class="text-center mb-3">
                    <i class="bi bi-star-fill text-warning"></i> Featured Books
                </h2>
                <p class="text-center text-muted">Discover our latest additions and popular titles</p>
            </div>
        </div>
        <div class="row">
            @foreach (var book in Model.FeaturedBooks)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm book-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title text-truncate">@book.Title</h5>
                                <span class="badge @(book.AvailableCopies > 0 ? "bg-success" : "bg-danger")">
                                    @(book.AvailableCopies > 0 ? "Available" : "Unavailable")
                                </span>
                            </div>
                            <p class="card-text text-muted small mb-2">
                                <i class="bi bi-person"></i> @(book.Publisher?.Name ?? "Unknown Publisher")
                            </p>
                            <p class="card-text text-muted small mb-2">
                                <i class="bi bi-calendar"></i> @book.PublicationDate.ToString("yyyy")
                            </p>
                            <p class="card-text text-muted small mb-3">
                                <i class="bi bi-book"></i> @book.AvailableCopies of @book.TotalCopies copies available
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <a asp-controller="Customer" asp-action="BookDetails" asp-route-id="@book.BookId" class="btn btn-primary btn-sm">
                                    <i class="bi bi-eye"></i> View Details
                                </a>
                                @if (User.Identity?.IsAuthenticated == true && book.AvailableCopies > 0)
                                {
                                    <button class="btn btn-success btn-sm" onclick="checkoutBook('@book.BookId')">
                                        <i class="bi bi-cart-plus"></i> Checkout
                                    </button>
                                }
                                else if (!User.Identity?.IsAuthenticated == true)
                                {
                                    <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-box-arrow-in-right"></i> Login to Checkout
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

<!-- Recent Books Section -->
@if (Model.RecentBooks.Any())
{
    <div class="container mb-5">
        <div class="row mb-4">
            <div class="col-12">
                <h2 class="text-center mb-3">
                    <i class="bi bi-clock-history"></i> Recently Added
                </h2>
                <p class="text-center text-muted">Check out our newest additions to the collection</p>
            </div>
        </div>
        <div class="row">
            @foreach (var book in Model.RecentBooks.Take(6))
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm book-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title text-truncate">@book.Title</h5>
                                <span class="badge @(book.AvailableCopies > 0 ? "bg-success" : "bg-danger")">
                                    @(book.AvailableCopies > 0 ? "Available" : "Unavailable")
                                </span>
                            </div>
                            <p class="card-text text-muted small mb-2">
                                <i class="bi bi-person"></i> @(book.Publisher?.Name ?? "Unknown Publisher")
                            </p>
                            <p class="card-text text-muted small mb-2">
                                <i class="bi bi-calendar"></i> @book.PublicationDate.ToString("yyyy")
                            </p>
                            <p class="card-text text-muted small mb-3">
                                <i class="bi bi-book"></i> @book.AvailableCopies of @book.TotalCopies copies available
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <a asp-controller="Customer" asp-action="BookDetails" asp-route-id="@book.BookId" class="btn btn-primary btn-sm">
                                    <i class="bi bi-eye"></i> View Details
                                </a>
                                @if (User.Identity?.IsAuthenticated == true && book.AvailableCopies > 0)
                                {
                                    <button class="btn btn-success btn-sm" onclick="checkoutBook('@book.BookId')">
                                        <i class="bi bi-cart-plus"></i> Checkout
                                    </button>
                                }
                                else if (!User.Identity?.IsAuthenticated == true)
                                {
                                    <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-box-arrow-in-right"></i> Login to Checkout
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

<!-- Call to Action Section -->
<div class="container mb-5">
    <div class="row">
        <div class="col-12">
            <div class="card bg-gradient text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="card-body text-center py-5">
                    <h2 class="mb-3">Ready to Start Your Reading Journey?</h2>
                    <p class="lead mb-4">Join thousands of readers who have discovered amazing books in our library.</p>
                    <div class="d-flex justify-content-center gap-3">
                        <a asp-controller="Customer" asp-action="Catalog" class="btn btn-light btn-lg">
                            <i class="bi bi-search"></i> Browse All Books
                        </a>
                        @if (!User.Identity?.IsAuthenticated == true)
                        {
                            <a asp-controller="Auth" asp-action="Register" class="btn btn-outline-light btn-lg">
                                <i class="bi bi-person-plus"></i> Join Now
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    .book-card {
        transition: transform 0.2s ease-in-out;
    }
    
    .book-card:hover {
        transform: translateY(-5px);
    }
    
    .display-6 {
        font-size: 3rem;
    }
</style>

<script>
    function checkoutBook(bookId) {
        if (confirm('Are you sure you want to checkout this book?')) {
            // Redirect to checkout page or handle checkout logic
            window.location.href = `/Customer/CheckoutBook?bookId=${bookId}`;
        }
    }
</script> 