@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-4 text-primary">
            <i class="bi bi-house-heart"></i> Library Management Dashboard
        </h1>
        <p class="lead text-muted">Welcome to your library management system</p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Total Books
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalBooks</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-book fs-2 text-primary"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Total Members
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalMembers</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-people fs-2 text-success"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Active Loans
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ActiveLoans</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-arrow-left-right fs-2 text-info"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Overdue Loans
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.OverdueLoans</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-exclamation-triangle fs-2 text-warning"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="bi bi-book"></i> Recent Books
                </h6>
                <a asp-controller="Books" asp-action="Index" class="btn btn-sm btn-primary">
                    View All
                </a>
            </div>
            <div class="card-body">
                @if (Model.RecentBooks.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var book in Model.RecentBooks)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">@book.Title</h6>
                                    <small class="text-muted">@book.Isbn • @book.Publisher?.Name</small>
                                </div>
                                <span class="badge bg-primary rounded-pill">@book.AvailableCopies available</span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted text-center">No books found</p>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-6 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="bi bi-arrow-left-right"></i> Recent Loans
                </h6>
                <a asp-controller="Loans" asp-action="Index" class="btn btn-sm btn-primary">
                    View All
                </a>
            </div>
            <div class="card-body">
                @if (Model.RecentLoans.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var loan in Model.RecentLoans)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">@loan.Book?.Title</h6>
                                    <small class="text-muted">@loan.Member?.FirstName @loan.Member?.LastName • Due: @loan.DueDate.ToString("MMM dd, yyyy")</small>
                                </div>
                                <span class="badge bg-success rounded-pill">@loan.Status</span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted text-center">No active loans</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="bi bi-lightning"></i> Quick Actions
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <a asp-controller="Books" asp-action="Create" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-plus-circle"></i><br>
                            Add Book
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a asp-controller="Members" asp-action="Create" class="btn btn-success btn-lg w-100">
                            <i class="bi bi-person-plus"></i><br>
                            Add Member
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a asp-controller="Loans" asp-action="Index" class="btn btn-info btn-lg w-100">
                            <i class="bi bi-arrow-left-right"></i><br>
                            Manage Loans
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a asp-controller="Publishers" asp-action="Create" class="btn btn-warning btn-lg w-100">
                            <i class="bi bi-building-add"></i><br>
                            Add Publisher
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }
    .border-left-success {
        border-left: 0.25rem solid #1cc88a !important;
    }
    .border-left-info {
        border-left: 0.25rem solid #36b9cc !important;
    }
    .border-left-warning {
        border-left: 0.25rem solid #f6c23e !important;
    }
    .text-gray-800 {
        color: #5a5c69 !important;
    }
    .font-weight-bold {
        font-weight: 700 !important;
    }
    .text-xs {
        font-size: 0.7rem;
    }
</style> 